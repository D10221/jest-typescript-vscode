{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./built",
        "noUnusedLocals": true,
        "noUnusedParameters": true,       
        "noImplicitThis": true, 
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules", "./built"
    ]
}